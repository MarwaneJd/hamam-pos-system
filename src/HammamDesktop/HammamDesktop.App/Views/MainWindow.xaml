<Window x:Class="HammamDesktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:HammamDesktop.Converters"
        mc:Ignorable="d"
        Title="Hammam - Point de Vente"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundDark}"
        TextElement.Foreground="{StaticResource TextPrimary}"
        TextElement.FontFamily="Segoe UI"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <converters:IconNameToKindConverter x:Key="IconNameToKindConverter"/>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:HasImageToVisibilityConverter x:Key="HasImageToVisibilityConverter"/>
        <converters:NoImageToVisibilityConverter x:Key="NoImageToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo et infos -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pool" 
                                             Width="40" Height="40"
                                             Foreground="#3B82F6"
                                             VerticalAlignment="Center"/>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding HammamNom}" 
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="{Binding EmployeNom}" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <!-- En ligne petit indicateur -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" 
                             VerticalAlignment="Center"
                             Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"/>
                    <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToTextConverter}}"
                               Margin="6,0,0,0"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}"/>
                    
                    <!-- Badge sync pending -->
                    <Border Margin="8,0,0,0" 
                            Background="#F59E0B" 
                            CornerRadius="10"
                            Padding="6,2"
                            Visibility="{Binding PendingSyncCount, Converter={StaticResource IntToVisibilityConverter}}">
                        <TextBlock Text="{Binding PendingSyncCount}" 
                                   FontSize="11"
                                   Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Bouton Synchronisation GRAND -->
                    <Button Command="{Binding ForceSyncCommand}"
                            Cursor="Hand"
                            ToolTip="Synchroniser maintenant"
                            Margin="12,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="#3B82F6"
                                        CornerRadius="12"
                                        Padding="20,8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CloudSync" Width="26" Height="26" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Text="Synchroniser" 
                                                   FontSize="15" FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Bouton déconnexion GRAND -->
                <Button Grid.Column="2" 
                        Command="{Binding LogoutCommand}"
                        Cursor="Hand"
                        ToolTip="Déconnexion"
                        Margin="0,8,16,8">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="#EF4444"
                                    CornerRadius="12"
                                    Padding="24,8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Logout" Width="28" Height="28" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="Déconnexion" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="White"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Zone principale avec les boutons de vente -->
        <Grid Grid.Row="1" Margin="32,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Boutons de vente - 2 par ligne -->
            <ItemsControl Grid.Row="0" 
                          ItemsSource="{Binding TicketTypes}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.SellTicketCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Width="420" Height="180"
                                Margin="10"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{StaticResource CardBackground}"
                                            BorderBrush="{StaticResource BorderColor}"
                                            BorderThickness="2"
                                            CornerRadius="20"
                                            ClipToBounds="True">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="20" 
                                                              ShadowDepth="0"
                                                              Opacity="0.4"
                                                              Color="Black"/>
                                        </Border.Effect>
                                        <Grid Margin="20" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Icône ou Image -->
                                            <Border Grid.Row="0"
                                                    Width="70" Height="70"
                                                    CornerRadius="35"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="0,5,0,10">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Couleur}" Opacity="0.2"/>
                                                </Border.Background>
                                                <Grid>
                                                    <!-- Image uploadée (prioritaire) -->
                                                    <Border CornerRadius="35" ClipToBounds="True"
                                                            Visibility="{Binding LocalImagePath, Converter={StaticResource HasImageToVisibilityConverter}}">
                                                        <Image Source="{Binding LocalImagePath, Converter={StaticResource ImagePathConverter}}"
                                                               Stretch="UniformToFill"
                                                               Width="70" Height="70"/>
                                                    </Border>
                                                    <!-- Fallback: Icône MaterialDesign -->
                                                    <materialDesign:PackIcon Kind="{Binding Icone, Converter={StaticResource IconNameToKindConverter}}"
                                                                             Width="38" Height="38"
                                                                             HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"
                                                                             Visibility="{Binding LocalImagePath, Converter={StaticResource NoImageToVisibilityConverter}}">
                                                        <materialDesign:PackIcon.Foreground>
                                                            <SolidColorBrush Color="{Binding Couleur}"/>
                                                        </materialDesign:PackIcon.Foreground>
                                                    </materialDesign:PackIcon>
                                                </Grid>
                                            </Border>

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Nom}"
                                                       FontSize="20" FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       Margin="0,5,0,5"/>

                                            <!-- Prix -->
                                            <TextBlock Grid.Row="2"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,10">
                                                <Run Text="{Binding Prix, StringFormat={}{0:0}}" 
                                                     FontSize="26" FontWeight="Bold"
                                                     Foreground="#4ADE80"/>
                                                <Run Text=" DH" 
                                                     FontSize="14"
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="{Binding Couleur}"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="border" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>

        <!-- Footer avec statistiques -->
        <Border Grid.Row="2"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Numéro du prochain ticket -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="TICKET SUIVANT"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="#"
                             FontSize="24"
                             Foreground="{StaticResource TextSecondary}"/>
                        <Run Text="{Binding NextTicketNumber}"
                             FontSize="48" FontWeight="Bold"
                             Foreground="#3B82F6"/>
                    </TextBlock>
                </StackPanel>

                <!-- Date d'aujourd'hui -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="DATE"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TodayDate}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="#4ADE80"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Heure -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="HEURE ACTUELLE"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="TimeDisplay"
                                   FontSize="48" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                        <Button Command="{Binding PrintClotureCommand}"
                                Margin="16,0,0,0"
                                Width="70" Height="70"
                                VerticalAlignment="Center"
                                ToolTip="Imprimer ticket de clôture"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#F59E0B"
                                            CornerRadius="35">
                                        <materialDesign:PackIcon Kind="Printer"
                                                                 Width="34" Height="34"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#D97706"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#B45309"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
