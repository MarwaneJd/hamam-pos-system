<Application x:Class="HammamDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Purple" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Couleurs personnalisées - Thème Sombre -->
            <SolidColorBrush x:Key="BackgroundDark" Color="#0F172A"/>
            <SolidColorBrush x:Key="CardBackground" Color="#1E293B"/>
            <SolidColorBrush x:Key="BorderColor" Color="#334155"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#F1F5F9"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
            
            <SolidColorBrush x:Key="HommeColor" Color="#3B82F6"/>
            <SolidColorBrush x:Key="FemmeColor" Color="#EC4899"/>
            <SolidColorBrush x:Key="EnfantColor" Color="#10B981"/>
            
            <SolidColorBrush x:Key="SuccessColor" Color="#22C55E"/>
            <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
            <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
